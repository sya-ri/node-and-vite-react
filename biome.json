{
    "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4,
        "ignore": ["**/package.json"]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "files": {
        "ignore": [
            ".esbuild/**",
            "dist/**",
            "storybook-static/**",
            "cdk.out",
            "./packages/openapi/*-schema.ts"
        ]
    }
}
